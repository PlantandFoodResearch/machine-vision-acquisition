    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: viewer",
            "type": "python",
            "request": "launch",
            "module": "machine_vision_acquisition_python.viewer",
            "args": [
                "--all"
            ],
            "justMyCode": true
        },
        {
            "name": "reset-all-cameras",
            "type": "python",
            "request": "launch",
            "module": "machine_vision_acquisition_python.viewer",
            "args": [
                "--all",
                "--factory-reset",
                "--tof=False"
            ],
            "justMyCode": true
        },
        {
            "name": "data-conversion",
            "type": "python",
            "request": "launch",
            "module": "machine_vision_acquisition_python.converter",
            "args": [
                "--input",
                "/mnt/powerplant/input/projects/dhs/smartsensingandimaging/development/fops/2022-04-29/images",
                "--tonemap"
            ],
            "justMyCode": true
        },
        {
            "name": "data-capture",
            "type": "python",
            "request": "launch",
            "module": "machine_vision_acquisition_python.capture",
            "args": [
                "--config",
                "${workspaceFolder}/etc/capture-config.json"
            ],
            "justMyCode": true
        },
        {
            "name": "data-capture: mobileimaging",
            "type": "python",
            "request": "launch",
            "module": "machine_vision_acquisition_python.capture",
            "args": [
                "--config",
                "${workspaceFolder}/etc/capture-mobileimaging-config.json"
            ],
            "justMyCode": true
        },
        {
            "name": "Python: TOF viewer",
            "type": "python",
            "request": "launch",
            "module": "machine_vision_acquisition_python.viewer.tof",
            "args": [
                "--serial",
                "2020029"
            ],
            "env": {
                "DISPLAY": "localhost:10.0",
                "LIBGL_ALWAYS_INDIRECT": "1"
            },
            "justMyCode": true
        }
    ]
}